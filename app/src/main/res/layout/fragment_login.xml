    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">


        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imageViewBack"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:contrast=".5"
            app:layout_constraintBottom_toBottomOf="@+id/usernameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_header"
            android:alpha=".8"
            android:drawableStart="@drawable/round_sports_baseball_24"
            android:gravity="center_vertical"
            android:letterSpacing=".09"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="-16dp"
            android:src="@drawable/rounded_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/usernameLayout" />


        <!-- Text Input Layout with EditText -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="@dimen/universal_padding"
            android:hint="@string/username"
            app:layout_constraintBottom_toTopOf="@id/passwordLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_max="500dp"
            tools:layout_editor_absoluteY="391dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/usernameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:inputType="textPersonName"
                android:textSize="@dimen/universal_text_size" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Input Layout -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            app:layout_constraintBottom_toTopOf="@+id/tvErrorMessage"
            app:layout_constraintEnd_toEndOf="@+id/usernameLayout"
            app:layout_constraintStart_toStartOf="@+id/usernameLayout"
            app:layout_constraintWidth_max="500dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:inputType="textPassword"
                android:textSize="@dimen/universal_text_size" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Error Message -->
        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/universal_padding"
            android:alpha="0"
            android:fontFamily="@font/bbr"
            android:text="@string/your_username_or_password_is_incorrect_please_try_again"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/text_size_alerts"
            app:layout_constraintBottom_toTopOf="@+id/cbRememberMe"
            app:layout_constraintEnd_toEndOf="@+id/passwordLayout"
            app:layout_constraintStart_toStartOf="@+id/passwordLayout" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbRememberMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/universal_padding"
            android:paddingStart="5dp"
            android:button="@drawable/round_checkbox"
            android:text="@string/remember_me"
            android:textSize="@dimen/universal_text_size"
            app:layout_constraintBottom_toTopOf="@+id/btnContinue"
            app:layout_constraintStart_toStartOf="@+id/passwordLayout" />

        <TextView
            android:id="@+id/tvHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="@string/help"
            android:textSize="@dimen/universal_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/cbRememberMe"
            app:layout_constraintEnd_toEndOf="@+id/passwordLayout"
            app:layout_constraintTop_toTopOf="@+id/cbRememberMe" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/universal_padding"
            android:layout_marginBottom="@dimen/universal_padding"
            android:paddingVertical="@dimen/universal_button_padding"
            android:text="@string/continue_"
            android:textColor="@color/white"
            android:textSize="@dimen/universal_text_size"
            app:layout_constraintBottom_toTopOf="@+id/btn2"
            app:layout_constraintEnd_toEndOf="@+id/passwordLayout"
            app:layout_constraintStart_toStartOf="@+id/passwordLayout" />

        <!-- Bottom Buttons -->
        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/universal_padding"
            android:backgroundTint="@android:color/transparent"
            android:text="Button 2"
            android:textColor="@color/black"
            android:textSize="@dimen/universal_text_size"
            app:layout_constraintBottom_toBottomOf="@id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/passwordLayout"
            app:layout_constraintStart_toEndOf="@+id/divider" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/btn2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn2" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/universal_padding"
            android:backgroundTint="@android:color/transparent"
            android:text="Button 1"
            android:textColor="@color/black"
            android:textSize="@dimen/universal_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            app:layout_constraintStart_toStartOf="@+id/passwordLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>